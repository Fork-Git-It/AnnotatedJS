{
  "name": "@fork-git-it/annotatedjs",
  "version": "1.0.0-beta",
  "description": "A JavaScript framework for building backends with annotations",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0 <21.0.0"
  },
  "types": "types/index.d.ts",
  "files": [
    "dist/**/*",
    "types/**/*"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": "https://github.com/Fork-Git-It/AnnotatedJS",
  "scripts": {
    "test": "npm run test:int",
    "test:int": "npm run test:int:sw & npm run test:int:node",
    "test:int:sw": "jest integration --env=jsdom",
    "test:int:node": "jest integration --env=node",
    "format": "prettier . -w",
    "build": "tsc"
  },
  "contributors": [
    {
      "name": "William Bryce Angell",
      "email": "wbryceangell@gmail.com",
      "url": "https://github.com/wbryceangell"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@babel/core": "^7.23.7",
    "@babel/plugin-proposal-decorators": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-typescript": "^7.23.3",
    "@types/normalize-path": "^3.0.0",
    "babel-jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.0.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "normalize-path": "^3.0.0",
    "reflect-metadata": "^0.1.13"
  }
}
